process {
    withName: Alignment_BWA {
        container = "quay.io/biocontainers/bwa:0.7.17--ha92aebf_3"
    }
    withName: Alignment_Samtools {
        container = "quay.io/biocontainers/samtools:1.9--h10a08f8_12"
    }
    withName: MarkDuplicates {
        container = "broadinstitute/picard:2.21.3"
        memory = '10GB'
    }
    withName: BamOrder {
        container = "broadinstitute/picard:2.21.3"
        memory = '10GB'
    }
    withName: IndexBAM {
        container = "quay.io/biocontainers/samtools:1.9--h10a08f8_12"
    }
    withName: GenBQSR {
        container = "quay.io/biocontainers/gatk4:4.1.4.0--1"
        memory = '10GB'
    }
    withName: ApplyBQSR {
        container = "quay.io/biocontainers/gatk4:4.1.4.0--1"
        memory = '10GB'
    }
    withName: HapCaller {
        container = "quay.io/biocontainers/gatk4:4.1.4.0--1"
        memory = '10GB'
    }
}

singularity {
    autoMounts = true
    enabled = true
}
